<section class="container flex" id="about">
    <h1 class=" heading" data-aos="zoom-in-down" data-aos-duration="3000">Willy <span>About</span></h1>
      <div class="row " data-aos="flip-left" data-aos-duration="3000" >
        <img class="rounded img-thumbnail " src="./img/me.jpg" alt="willy" width="550" height="500">
        <div class="col">
          <h4 class="text-center">Who is this person?</h4>
          <div class="text" data-aos="zoom-out-up" data-aos-duration="3000">My name is PangTa, I am learning coding in UCB-Bootcamp.
            <br>
            Fresh Start but Getting used to it. I having passion for creating website and learning something new.
            <br>
            <a href="#contact">Want to do something cool together?</a> 
        </div>
        <br>
          <!-- icon for the personality -->
          <div class=" row d-flex flex-wrap" >
            <!-- adding progress bar -->
            <div class="container ">
              <div class="tag bg-warning rounded" data-aos="fade-down">Front End</div>
              <div class="progress my-2 progress-value" style="height: 20px;"data-aos="fade-right" >
                <div class="progress-bar " role="progressbar" style="width: 50%;" aria-valuenow="50" 
                aria-valuemin="0" aria-valuemax="100">50%</div>
              </div>
              <div class=" tag bg-warning rounded" data-aos="fade-down">Back End</div>
              <div class="progress  my-2 progress-value" style="height: 20px;" data-aos="fade-right">
                <div class="progress-bar" role="progressbar" style="width: 40%;" aria-valuenow="50" 
                aria-valuemin="0" aria-valuemax="100">40%</div>
              </div>
              <div class="tag bg-warning rounded" data-aos="fade-down">Full Stack</div>
              <div class="progress  my-2 progress-value" style="height: 20px;" data-aos="fade-right">
                <div class="progress-bar" role="progressbar" style="width: 60%;" aria-valuenow="25" 
                aria-valuemin="0" aria-valuemax ="100">60%</div>
              </div>
              <div class="tag bg-warning rounded" data-aos="fade-down">SDE</div>
              <div class="progress  my-2 progress-value" style="height: 20px;" data-aos="fade-right">
                <div class="progress-bar" role="progressbar"  style="width: 5%;" aria-valuenow="10" 
                aria-valuemin="0" aria-valuemax="100">5%</div>
              </div>
            </div>
          </div>
        </div>
      </div>
  </section>
<section class="container flex" id="project">
    <h1 class="heading">Willy <span>Project</span> </h1>

  <div class="row container flex flex-wrap" >

    {{#each projects as |project| }}
      <div class="shadow-lg bg-body mx-3" data-aos="zoom-out-down"
            data-aos-duration="3000" style="width: 18rem;">
        <div class="rotate text-center">
            <figure><a href="{{project.url}}"><img src="{{project.image}}" class="card-img-top" alt="..."></a></figure>
        </div> 
        <div class="card-title">
          <h5 class="card-title text-center">{{project.name}}</h5>
          <div class="card-body">
            <p>
              {{project.description}}
            </p> 
          </div>
        </div> 
      </div>
    {{/each}}
  </div>
</section>
<section id="contact" class=" container text-center book" data-aos="zoom-out-right"
  data-aos-duration="3000">
    <h1 class="heading">Willy <span>Contact</span> </h1>
    <form >
        <input type="email" placeholder="Name" class="box">
        <input  type="password" placeholder="Email" class="box">
        <textarea class="form-control box" rows="6" placeholder="Your Message"></textarea>
    </form>
      <a href="#" type="button" class=" btn p-1 text-light" style="background: #375d6f;margin-left: 400px;"><span>submit</span>
        <div class="liquid"></div>
      </a>
    </div>
</section>